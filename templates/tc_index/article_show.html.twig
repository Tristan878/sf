{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ article.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ article.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ article.content | raw }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <img src="{{ article.image }}" class="image">
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('article') }}">back to list</a>

{% endblock %}
